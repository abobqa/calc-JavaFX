<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.contollers.LoginController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: linear-gradient(to bottom right, #f4f6f7, #d6e0f0);">

    <VBox alignment="CENTER" spacing="12" layoutX="50" layoutY="40" prefWidth="300" prefHeight="220"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8,0,0,2);">

        <Label text="Вход в систему" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="18"/>
            </font>
        </Label>

        <TextField fx:id="usernameField" promptText="Логин"
                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 6;"/>
        <PasswordField fx:id="passwordField" promptText="Пароль"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 6;"/>

        <Button text="Войти" onAction="#onLogin"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 20 6 20;"
                prefWidth="120"/>

        <Hyperlink text="Нет аккаунта? Регистрация" onAction="#onGoRegister"
                   style="-fx-text-fill: #2980b9; -fx-font-size: 12;"/>

        <Label fx:id="statusLabel" textFill="red" wrapText="true" textAlignment="CENTER"/>
    </VBox>
</AnchorPane>
