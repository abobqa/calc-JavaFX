<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.contollers.RegistrationController"
            prefWidth="420" prefHeight="320"
            style="-fx-background-color: linear-gradient(to bottom right, #f4f6f7, #d6e0f0);">

    <VBox alignment="CENTER" spacing="12" layoutX="60" layoutY="40" prefWidth="300" prefHeight="240"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8,0,0,2);">

        <Label text="Регистрация" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="18"/>
            </font>
        </Label>

        <TextField fx:id="usernameField" promptText="Логин"
                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 6;"/>

        <PasswordField fx:id="passwordField" promptText="Пароль"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 6;"/>

        <PasswordField fx:id="passwordRepeatField" promptText="Повторите пароль"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 6;"/>

        <Button text="Зарегистрироваться" onAction="#onRegister"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 20 6 20;"
                prefWidth="160"/>

        <Hyperlink text="У меня уже есть аккаунт" onAction="#onGoLogin"
                   style="-fx-text-fill: #2980b9; -fx-font-size: 12;"/>

        <Label fx:id="statusLabel" textFill="#e74c3c" wrapText="true" textAlignment="CENTER"/>
    </VBox>
</AnchorPane>
